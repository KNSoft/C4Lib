<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <ImplicitUsings>disable</ImplicitUsings>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <NoWin32Manifest>true</NoWin32Manifest>
    
    <Company>KNSoft</Company>
    <RepositoryUrl>https://github.com/KNSoft/C4Lib</RepositoryUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageLicenseExpression>MPL-2.0</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
    <AssemblyName>KNSoft.$(MSBuildProjectName)</AssemblyName>
    <Title>$(AssemblyName)</Title>
    <RepositoryType>git</RepositoryType>
    <Product>$(MSBuildProjectName)</Product>
    <Authors>KNSoft</Authors>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Collections.Immutable" Version="7.0.0" PrivateAssets="all" />
    <None Include="..\README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

</Project>
